<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Windows 11 Design Tokens -->
    
    <!-- Corner Radius (Windows 11 uses larger, more rounded corners) -->
    <CornerRadius x:Key="Win11ControlCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="Win11CardCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="Win11DialogCornerRadius">16</CornerRadius>
    <CornerRadius x:Key="Win11PillCornerRadius">20</CornerRadius>
    <CornerRadius x:Key="Win11SmallCornerRadius">4</CornerRadius>
    
    <!-- Spacing and Padding (Windows 11 uses more generous spacing) -->
    <Thickness x:Key="Win11CardPadding">20,16,20,16</Thickness>
    <Thickness x:Key="Win11SectionSpacing">0,0,0,20</Thickness>
    <Thickness x:Key="Win11ItemSpacing">0,0,0,12</Thickness>
    <Thickness x:Key="Win11CompactPadding">12,8,12,8</Thickness>
    <Thickness x:Key="Win11NavigationItemMargin">4,2,4,2</Thickness>
    
    <!-- Typography (Windows 11 uses Segoe UI Variable) -->
    <FontFamily x:Key="Win11FontFamily">Segoe UI Variable Display, Segoe UI, sans-serif</FontFamily>
    <FontFamily x:Key="Win11TextFontFamily">Segoe UI Variable Text, Segoe UI, sans-serif</FontFamily>
    
    <!-- Font Sizes -->
    <sys:Double x:Key="Win11TitleFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">28</sys:Double>
    <sys:Double x:Key="Win11SubtitleFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">18</sys:Double>
    <sys:Double x:Key="Win11BodyFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="Win11CaptionFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="Win11SmallFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">11</sys:Double>
    
    <!-- Elevation and Shadows (Windows 11 subtle shadows) -->
    <DropShadowEffect x:Key="Win11CardShadow" 
        BlurRadius="16" 
        ShadowDepth="2" 
        Direction="270" 
        Opacity="0.12" 
        Color="#000000" />
    
    <DropShadowEffect x:Key="Win11HoverShadow" 
        BlurRadius="24" 
        ShadowDepth="4" 
        Direction="270" 
        Opacity="0.18" 
        Color="#000000" />
    
    <!-- Animation Durations (Windows 11 smooth animations) -->
    <Duration x:Key="Win11FastAnimation">0:0:0.15</Duration>
    <Duration x:Key="Win11MediumAnimation">0:0:0.25</Duration>
    <Duration x:Key="Win11SlowAnimation">0:0:0.35</Duration>
    
    <!-- Button Styles -->
    <Style x:Key="Win11PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="16,8,16,8" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    
    <!-- Card Style -->
    <Style x:Key="Win11CardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Win11CardCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource Win11CardPadding}" />
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Effect" Value="{StaticResource Win11CardShadow}" />
    </Style>
    
    <!-- Section Header Style -->
    <Style x:Key="Win11SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource Win11SubtitleFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,8,0,16" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
    </Style>
    
    <!-- Page Title Style -->
    <Style x:Key="Win11PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource Win11TitleFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,24,0,32" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
    </Style>
    
    <!-- Description Text Style -->
    <Style x:Key="Win11DescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource Win11BodyFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="LineHeight" Value="20" />
    </Style>
    
    <!-- Metric Value Style -->
    <Style x:Key="Win11MetricValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    
    <!-- Metric Label Style -->
    <Style x:Key="Win11MetricLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource Win11SmallFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

</ResourceDictionary>
