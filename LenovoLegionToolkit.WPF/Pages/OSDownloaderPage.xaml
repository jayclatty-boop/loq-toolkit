<UserControl
    x:Class="LenovoLegionToolkit.WPF.Pages.OSDownloaderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
        <StackPanel Orientation="Vertical" Margin="20">
            <!-- Header -->
            <TextBlock
                Text="Operating System Downloader"
                FontSize="32"
                FontWeight="Bold"
                Margin="0,0,0,20"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <!-- OS Type Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Gap="10">
                <TextBlock Text="Select OS:" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" />
                <ui.RadioButton x:Name="WindowsRadio" Content="Windows" GroupName="OSType" IsChecked="True" Margin="10,0" />
                <ui.RadioButton x:Name="LinuxRadio" Content="Linux" GroupName="OSType" Margin="10,0" />
            </StackPanel>

            <!-- Windows Options -->
            <Grid x:Name="WindowsOptionsGrid" Margin="0,0,0,20">
                <StackPanel Orientation="Vertical">
                    <!-- Version Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15" Gap="10">
                        <TextBlock Text="Windows Version:" VerticalAlignment="Center" FontWeight="Bold" Width="150" />
                        <ComboBox x:Name="WindowsVersionCombo" Width="300" />
                    </StackPanel>

                    <!-- Edition Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15" Gap="10">
                        <TextBlock Text="Edition:" VerticalAlignment="Center" FontWeight="Bold" Width="150" />
                        <ComboBox x:Name="WindowsEditionCombo" Width="300" />
                    </StackPanel>

                    <!-- Available Images -->
                    <TextBlock Text="Available Downloads:" FontWeight="Bold" Margin="0,0,0,10" />
                    <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="WindowsImagesList" />
                    </ScrollViewer>
                </StackPanel>
            </Grid>

            <!-- Linux Options -->
            <Grid x:Name="LinuxOptionsGrid" Margin="0,0,0,20" Visibility="Collapsed">
                <StackPanel Orientation="Vertical">
                    <!-- Distro Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15" Gap="10">
                        <TextBlock Text="Linux Distribution:" VerticalAlignment="Center" FontWeight="Bold" Width="150" />
                        <ComboBox x:Name="LinuxDistroCombo" Width="300" />
                    </StackPanel>

                    <!-- Available Images -->
                    <TextBlock Text="Available Downloads:" FontWeight="Bold" Margin="0,0,0,10" />
                    <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="LinuxImagesList" />
                    </ScrollViewer>
                </StackPanel>
            </Grid>

            <!-- Download Queue -->
            <Expander Header="Downloads (0)" Margin="0,20,0,0">
                <ListBox x:Name="DownloadQueue" Height="200" Margin="0,10,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Program.Name}" FontWeight="Bold" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Status}" Foreground="Gray" Margin="0,5,0,0" />
                                    
                                    <ProgressBar Grid.Row="2" Grid.Column="0" Value="{Binding ProgressPercent}" Height="5" Margin="0,5,0,0" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Text="{Binding ProgressPercent, StringFormat='{0:F1}%'}" VerticalAlignment="Center" HorizontalAlignment="Right" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>
